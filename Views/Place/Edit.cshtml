@model web_groupware.Models.PlaceDetailModel

@{
    ViewData["Title"] = "施設マスタ（更新）";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box page-title-box-alt">
                <h4 class="page-title">施設マスタ</h4>
            </div>
        </div>
    </div>
    <div class="card" style="">
        <div class="card-body">
            <form asp-controller="Place" asp-action="Edit" asp-route-place_cd="@Model.place_cd" method="post" class="form-box">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-2 col-12 form-group">
                    <label asp-for="@Model.place_cd" class="control-label">施設コード</label>
                    <input asp-for="@Model.place_cd" class="form-control" readonly/>
                </div>
                <div>
                    <span asp-validation-for="@Model.place_cd" class="text-danger"></span>
                </div>
                <div class="col-md-4 col-12 form-group mt-2">
                    <label asp-for="@Model.place_name" class="control-label">施設名</label>
                    <input asp-for="@Model.place_name" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="@Model.place_name" class="text-danger"></span>
                </div>
                <div class="col-md-2 col-12 form-group mt-2">
                    <label asp-for="@Model.sort" class="control-label">並び順</label>
                    <input asp-for="@Model.sort" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="@Model.sort" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <a class="btn btn-primary" asp-controller="Place" asp-action="Index">キャンセル</a>
                    </div>
                    <div class="col text-end">
                        <button type="submit" class="btn btn-primary">更　新</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}