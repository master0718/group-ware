@model web_groupware.Models.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourApplicationNamespace
@{
    ViewData["Title"] = "ログイン";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - グループウェア</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/favicon.ico" />
</head>
<body>
    <div class="auth-fluid">
        <div class="auth-fluid-right">
            <div class="auth-user-testimonial">
                <h3 class="mb-3 text-white" style="white-space: pre-wrap">@Model.title</h3>
                <p class="lead fw-normal" style="white-space: pre-wrap">@Model.message</p>
            </div>
        </div>
        <div class="auth-fluid-form-box">
            <div class="align-items-center d-flex h-100">
                <div class="card-body">
                    <div class="text-center mb-5">
                        <img src="~/images/logo_ast_3.png" style="object-fit: contain;max-width:100%; display: inline-block;" />
                    </div>
                    <h4 class="mt-0 mb-4 text-center">サインイン</h4>
                    <form asp-controller="Login" asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="mail" class="control-label"></label>
                            <input type="text" asp-for="mail" class="form-control" />
                            <span asp-validation-for="mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="password" class="control-label"></label>
                            <input asp-for="password" class="form-control" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" asp-for="remember" class="check" />
                            <label asp-for="remember" class="control-label"></label>
                            <span asp-validation-for="remember" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ログイン" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<style>
    .form-group {
        padding: 5px
    }
</style>
<script type="text/javascript" asp-append-version="true">
    if (!(window == window.parent)) {
        parent.window.location.href = parent.window.location.href;
    }
</script>
@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>*@
<script type="text/javascript" src="~/lib/jquery/jquery-3.7.1.min.js"></script>
<script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
