@model web_groupware.Models.EmployeeViewModel

@{
    ViewData["Title"] = "社員マスタ（削除）";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box page-title-box-alt">
                <h4 class="page-title">社員マスタ</h4>
            </div>
        </div>
    </div>
    <div class="card" style="">
        <div class="card-body">
            <form asp-controller="Employee" asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="staf_cd" />
                <div class="row">
                    <div class="col-md-4 col-12 form-group">
                        <label asp-for="staf_cd" class="control-label">社員番号</label>
                        <input asp-for="staf_cd" class="form-control" readonly />
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4 col-12 form-group mt-2">
                        <label asp-for="password" class="control-label">パスワード</label>
                        <input asp-for="password" class="form-control" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-12 form-group mt-2">
                        <label asp-for="staf_name" class="control-label">社員名名</label>
                        <input asp-for="staf_name" class="form-control" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-12 form-group mt-2">
                        <label asp-for="mail" class="control-label">メールアドレス</label>
                        <input asp-for="mail" class="form-control" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-12 form-group mt-2">
                        <div class="form-check">
                            <input type="checkbox" id="auth_admin" name="auth_admin" value="1" class="form-check-input"
                            @(Model.auth_admin == 1 ? "checked" : "") disabled />
                            <label class="control-label">管理者権限</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-12 form-group mt-2">
                        <label asp-for="workflow_auth" class="control-label">承認者権限</label>
                        <select asp-for="workflow_auth" class="form-control" disabled>
                            <option value="0">一般</option>
                            <option value="1">承認者</option>
                            <option value="2">決裁者</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <a class="btn btn-primary" asp-controller="Employee" asp-action="Index">戻る</a>
                    </div>
                    <div class="col text-end">
                        <button type="submit" class="btn btn-danger">削　除</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/Employee.js" asp-append-version="true"></script>
    }
}
